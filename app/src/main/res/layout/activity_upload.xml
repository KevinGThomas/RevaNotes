<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        tools:context=".UploadActivity">

        <include
            android:id="@+id/uploadToolbar"
            layout="@layout/toolbar_back" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:id="@+id/scrollView"
        android:layout_below="@+id/uploadToolbar"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <TextView
            android:id="@+id/boldtext"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:text="UPLOAD FILE"

            android:textSize="30dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/enter_filename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/boldtext"
            android:hint="Enter File Name" />

        <EditText
            android:id="@+id/enter_filedesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/enter_filename"
            android:hint="Enter File Description" />


        <Button
            android:id="@+id/button_upload"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_below="@+id/enter_filedesc"
            android:text="Select" />

        <TextView
            android:id="@+id/notification"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_below="@+id/button_upload"
            android:text="Progress" />

            <TextView
                android:id="@+id/Type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/notification"
                android:text="Select Type: " />

            <RadioGroup
                android:id="@+id/radiogp_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Type">

                <RadioButton
                    android:id="@+id/Notes"
                    android:text="Notes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <RadioButton
                    android:id="@+id/PYQ"
                    android:text="PYQ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RadioGroup>

        <TextView
            android:id="@+id/branch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radiogp_type"
            android:text="Select Branch: " />

        <RadioGroup
            android:id="@+id/radiogp_branch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/branch">

            <RadioButton
                android:id="@+id/branch1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/branch2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/branch3"
                android:layout_width="wrap_content"
