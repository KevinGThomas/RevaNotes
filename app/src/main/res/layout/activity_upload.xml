                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/branch6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/branch7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/branch8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!--RadioButton
