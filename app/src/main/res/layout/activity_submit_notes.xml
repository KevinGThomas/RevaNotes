<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/scrollSubmit"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relativeDisplayTab"
    tools:context="com.example.kev.revanotes.SubmitNotes">

    <include
        android:id="@+id/submitToolbarTab"
        layout="@layout/toolbar" />

    <TextView
        android:id="@+id/tvSubmit"
        android:text="SUBMIT NOTES FOR VALIDATION"
        android:layout_below="@id/submitToolbarTab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:textSize="20dp"
        android:layout_centerHorizontal="true" />


    <TextView
        android:paddingTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/color_white"
        android:id="@+id/tv5Submit"
        android:layout_below="@id/tvSubmit"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="22dp"
        android:text="Students or teachers can submit notes for validation"
        android:paddingLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:paddingTop="20dp"
        android:layout_marginRight="10dp"
        android:background="@color/color_white"
        android:id="@+id/tv3Submit"
        android:layout_below="@id/tv5Submit"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:text="Subject Details: "
        android:paddingLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



    <EditText
        android:id="@+id/etSubmit"
        android:layout_below="@id/tv3Submit"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv1Submit"
        android:paddingTop="20dp"
        android:background="@color/color_white"
        android:paddingLeft="5dp"
        android:textColor="@color/black"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="18dp"
        android:text="Unit Number: (required)"
        android:layout_below="@+id/etSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/et1Submit"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv1Submit"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:backgroundTintMode="screen"
        android:paddingLeft="5dp"
        android:text="Unit: " />

    <TextView
        android:id="@+id/tv2Submit"
        android:background="@color/color_white"
        android:paddingTop="20dp"
        android:paddingLeft="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:text="Notes created by teacher: (required)"
        android:layout_below="@+id/et1Submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/et2Submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv2Submit"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="5dp"
        android:paddingBottom="15dp"
        android:text="Teacher: " />

    <TextView
        android:id="@+id/tv4Submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="3dp"
        android:textSize="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/et2Submit"
        android:background="@color/color_white"/>



    <Button
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv4Submit"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:text="Submit"
        android:id="@+id/btSubmit"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btSubmit"

        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Note: Clicking submit will redirect you to the 'REVA Notes' Whatsapp chat, please attach the notes file after the message."/>



</RelativeLayout>

</ScrollView>